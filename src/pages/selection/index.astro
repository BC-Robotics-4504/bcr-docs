---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';

const cards = [
  {
    title: 'Mechanical',
    desc: 'Frames, drivetrains, motion, fasteners, and assembly notes.',
    href: '/mechanical/',
    icon: 'wrench',
  },
  {
    title: 'Electrical',
    desc: 'Power distro, wiring standards, safety, and testing.',
    href: '/electrical/',
    icon: 'bolt-lightning',
  },
  {
    title: 'Programming',
    desc: 'Code structure, tooling, deployment, and debugging.',
    href: '/programming/',
    icon: 'code',
  },
  {
    title: 'CAD',
    desc: 'Modeling conventions, drawings, exports, BOM.',
    href: '/cad/',
    icon: 'cube',
  },
  {
    title: 'Impact',
    desc: 'Outreach, documentation, branding, and team ops.',
    href: '/impact/',
    icon: 'heart',
  },
];
---

<head>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css"
    integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
</head>

<StarlightPage frontmatter={{ title: '', template: 'splash' }}>
  <section class="wrap">
    <h1 class="page-title">Team Guides</h1>
    <p class="page-subtitle">Your quick jump to the core sections.</p>

    <div class="cards">
      {
        cards.map((c) => (
          <a class="card" href={c.href} aria-label={`${c.title} â€” ${c.desc}`}>
            <div class="icon" aria-hidden="true">
              <i class={`fa-solid fa-${c.icon}`}></i>
            </div>
            <div class="content">
              <h2 class="title">{c.title}</h2>
              <p class="desc">{c.desc}</p>
              <span class="cta">Open -></span>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</StarlightPage>

<style>
  :root {
    --_bg: var(--sl-color-bg, #0b1020);
    --_panel: var(--sl-color-bg-inline-code, #fff);
    --_text: var(--sl-color-text, #0b1020);
    --_muted: var(--sl-color-gray-2, #6b7280);
    --_border: var(--sl-color-hairline, rgba(0, 0, 0, 0.08));
    --_accent: var(--sl-color-accent, #4f46e5);
    --_shadow: var(--sl-shadow-md, 0 6px 24px rgba(0, 0, 0, 0.08));
    --_radius: 14px;
  }

  .wrap {
    margin: 0 auto;
    max-width: 1000px;
    padding: clamp(1rem, 3vw, 2rem);
    text-align: center;
  }

  .page-title {
    font-size: clamp(2rem, 3vw, 2.5rem);
    margin: 0;
    color: var(--_text);
  }

  .page-subtitle {
    color: var(--_muted);
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: clamp(1.2rem, 2.5vw, 1.75rem);
  }

  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    border-radius: var(--_radius);
    background: var(--_panel);
    color: var(--_text);
    text-decoration: none;
    border: 1px solid var(--_border);
    box-shadow: var(--_shadow);
    transition: transform 0.18s ease, box-shadow 0.18s ease, border-color 0.18s ease;
  }
  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 34px rgba(0, 0, 0, 0.15);
    border-color: color-mix(in oklab, var(--_accent) 25%, var(--_border));
  }
  .card:focus-visible {
    outline: 3px solid color-mix(in oklab, var(--_accent) 65%, white);
    outline-offset: 3px;
  }

  .icon {
    width: 64px;
    height: 64px;
    border-radius: 14px;
    background: color-mix(in oklab, var(--_accent) 16%, rgb(229, 232, 235));
    display: grid;
    place-items: center;
    border: 1px solid color-mix(in oklab, var(--_accent) 35%, var(--_border));
    font-size: 28px;
    color: color-mix(in oklab, var(--_accent) 85%, black);
  }

  .content {
    display: grid;
    gap: 0.4rem;
    align-content: start;
    text-align: center;
  }
  .title {
    margin: 0;
    font-size: 1.2rem;
    line-height: 1.3;
  }
  .desc {
    margin: 0;
    color: var(--_muted);
    font-size: 1rem;
  }
  .cta {
    margin-top: 0.3rem;
    font-weight: 600;
    color: var(--_accent);
    font-size: 1rem;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --_panel: var(--sl-color-bg, #0b1020);
      --_text: var(--sl-color-text, #e5e7eb);
      --_muted: var(--sl-color-gray-4, #a3a3a3);
      --_border: var(--sl-color-hairline, rgba(255, 255, 255, 0.08));
      --_shadow: 0 6px 22px rgba(0, 0, 0, 0.35);
    }
    .card {
      border-color: var(--_border);
    }
  }
</style>
